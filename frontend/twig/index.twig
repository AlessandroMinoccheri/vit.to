<!doctype html>
<html lang="en">
  {% include 'partials/head.twig' %}
  <body class="body">
    {% include 'partials/header-mobile.twig' %}
    <aside class="aside">
      {% include 'partials/aside__header.twig' %}
      {% include 'partials/aside__footer.twig' %}
    </aside>
    <main class="main">
      <section class="crafts">
        {% for item in metadata.collections.diy %}
          <a class="crafts__item" href="{{ item.path }}">
            {% include 'partials/piece.twig' with { item: item } %}
          </a>
        {% endfor %}
        {% include 'partials/crafts__call.twig' %}
      </section>
    </main>
    {% include 'partials/assets.twig' %}
  </body>
</html>
