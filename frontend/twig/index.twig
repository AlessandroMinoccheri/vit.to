<!doctype html>
<html lang="en">
  {% include 'partials/head.twig' %}
  <body class="body">
    <aside class="aside">
      {% include 'partials/aside__header.twig' %}
      {% include 'partials/aside__footer.twig' %}
    </aside>
    <main class="main">
      <section class="crafts">
        {% set items = global.faker.random.number(10, 25) %}
        {% for i in 0..(items) %}
          <div class="crafts__item">
            <article class="piece">
              <div class="piece__picture">
                <img class="piece__image" src="{{ global.images.white[i] }}" alt="">
              </div>
              <div class="piece__details">
                <h1>
                  {{ global.faker.lorem.sentence }}
                </h1>
              </div>
            </article>
          </div>
        {% endfor %}
      </section>
    </main>
  </body>
</html>
