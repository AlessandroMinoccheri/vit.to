<!doctype html>
<html lang="{{ metadata.lang }}">
  {% include 'partials/head.twig' with {
    title: metadata.title,
    date: m.metadata.lastmod
    }
  %}
  <body class="body">
    {% include 'partials/header-mobile.twig' %}
    <aside class="aside">
      {% include 'partials/aside__header.twig' %}
      {% include 'partials/aside__footer.twig' %}
    </aside>
    <main class="main">
      <section class="posts">
        <div id="policy-message" class="posts__item posts__item--policy policy-container">
          {% include 'partials/policy.twig' with { bordered: true } %}
        </div>
        {% for item in metadata.collections.reviews %}
          {% if item.draft and metadata.enable.drafts or item.draft is not defined %}
            <a class="posts__item" href="{{ item.path }}">
              {% include 'partials/reviews/post.twig' with { item: item } %}
            </a>
          {% endif %}
        {% endfor %}
        {% for item in metadata.collections.diy %}
          {% if item.draft and metadata.enable.drafts or item.draft is not defined %}
            <a class="posts__item" href="{{ item.path }}">
              {% include 'partials/diy/post.twig' with { item: item } %}
            </a>
          {% endif %}
        {% endfor %}
        <div class="posts__call">
          {% include 'partials/email-message.twig' %}
        </div>
      </section>
      {% include 'partials/cookie-policy.twig' %}
    </main>
    {% include 'partials/assets.twig' %}
  </body>
</html>
