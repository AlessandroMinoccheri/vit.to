{% set articleDescription = 'hello' %}

{% if collection != '' %}
  {% set socialImage = metadata.home ~ '/' ~ path ~ '/cover.jpg' %}
{% else %}
  {% set socialImage = metadata.home ~ '/img/cover.jpg' %}
{% endif %}

{% if date %}
  <meta property="article:published_time" content="{{ date }}">
{% endif %}
<meta property="article:publisher" content="{{ metadata.social.facebook }}">
{% if collection != '' %}
  <meta property="article:section" content="{{ collection }}">
{% endif %}
{% if tags %}
  <meta property="article:tag" content="{{ tags }}">
{% endif %}

<meta property="og:description" content="{{ articleDescription }}">
<meta property="og:image" content="{{ socialImage }}">
<meta property="og:locale" content="{{ metadata.locale }}">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:title" content="{{ title }}">
<meta property="og:type" content="article">
<meta property="og:url" content="{{ metadata.home }}/{{ path }}">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="{{ metadata.username.twitter }}">
<meta name="twitter:description" content="{{ articleDescription }}">
<meta name="twitter:domain" content="{{ metadata.title }}">
<meta name="twitter:image:src" content="{{ socialImage }}">
<meta name="twitter:site" content="{{ metadata.username.twitter }}">
<meta name="twitter:title" content="{{ title }}">
